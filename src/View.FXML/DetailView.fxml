<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="controller.DetailController" spacing="10" style="-fx-padding: 20; -fx-background-color: #f9f9f9;">
   <children>
      <Label fx:id="wordLabel" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #0033cc;" />
      <Label fx:id="pronunciationLabel" style="-fx-font-size: 18px; -fx-font-style: italic; -fx-text-fill: #666;" />
      <Label fx:id="partOfSpeechLabel" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #000;" />
      <Label fx:id="originLabel" wrapText="true" style="-fx-font-size: 14px; -fx-text-fill: #888;" />
      <Label text="Nghĩa:" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
      <Label fx:id="meaningsLabel" wrapText="true" style="-fx-font-size: 14px; -fx-text-fill: #000;" />
      <Label text="Từ đồng nghĩa:" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
      <Label fx:id="synonymsLabel" wrapText="true" style="-fx-font-size: 14px; -fx-text-fill: #000;" />
      <Label text="Từ trái nghĩa:" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
      <Label fx:id="antonymsLabel" wrapText="true" style="-fx-font-size: 14px; -fx-text-fill: #000;" />
   </children>
</VBox>